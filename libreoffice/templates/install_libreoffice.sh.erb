#!/bin/sh
#
# Install LibreOffice from http://www.libreoffice.org/

name="LibreOffice_4.2.6-secfix_Linux_x86-64_deb.tar.gz"
name_lang="LibreOffice_4.2.6-secfix_Linux_x86-64_deb_langpack_ca.tar.gz"
loc="http://download.documentfoundation.org/libreoffice/stable/4.2.6/deb/x86_64/"

cd /root/
if [ ! -s "$name" ]; then
  wget "${loc}${name}" -O $name
fi
if [ ! -s "$name_lang" ]; then
  wget "${loc}${name_lang}" -O $name_lang
fi

tar xaf $name
tar xaf $name_lang

dpkg -i LibreOffice_*deb/DEBS/*.deb
dpkg -i LibreOffice_*_ca/DEBS/*.deb

rm -rf LibreOffice_*/
